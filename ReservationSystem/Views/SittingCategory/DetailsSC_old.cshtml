@{
    ViewData["Title"] = "Sitting Category Details";
    var SCTimeslots = ViewBag.SCTimeslots;
    var SCTables = ViewBag.SCTables;
    var SCSittings = ViewBag.SCSittings;
}

<h1>Sitting Category Details</h1>

<h3>Timeslots</h3>
<table class="table">
    <thead>
        <tr>
            <th scope="col">
                Start Time
            </th>
            <th scope="col">
                End Time
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in SCTimeslots)
        {
            <tr>
                <td>
                    @item.StartTime
                </td>
                <td>
                    @item.EndTime
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Tables</h3>
<table class="table">
    <thead>
        <tr>
            <th scope="col">
                Area
            </th>
            <th scope="col">
                Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in SCTables)
        {
            <tr>
                <td>
                    @item.Table.Area
                </td>
                <td>
                    @item.Table.Name
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>DetailsSCSittings</h3>

<p>
    <a class="btn btn-info" role="button"  asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">
                Date
            </th>
            <th scope="col">
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in SCSittings)
        {
            <tr>
                <td>
                    @item.Date
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
