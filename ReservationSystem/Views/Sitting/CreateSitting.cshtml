@model ReservationSystem.Models.Sitting.CreateSitting

@{
    ViewData["Title"] = "Create Sitting";
}

<h3>Create Sitting</h3>

<hr />
<div class="row">
    <div class="col-12">

        <form asp-action="CreateSitting">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="StartDate" class="control-label">Start Date</label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group col-6">
                    <label asp-for="EndDate" class="control-label">End Date</label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>


            @if (Model.SittingCategoryId > 0)
            {
                <input type="hidden" asp-for="SittingCategoryId" />
                <div>
                    <h4>Sitting Category Info</h4>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.SittingCategory.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.SittingCategory.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.SittingCategory.Capacity)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.SittingCategory.Capacity)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.SittingCategory.StartTime)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.SittingCategory.StartTime)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.SittingCategory.EndTime)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.SittingCategory.EndTime)
                        </dd>
                    </dl>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="SittingCategoryId" class="control-label">Sitting Category</label>
                        <select id="select" asp-for="SittingCategoryId" asp-items="@Model.SittingCategories" class="form-control">
                            <option value="none" selected disabled hidden>-- Select a Sitting Category --</option>
                        </select>
                        <span asp-validation-for="SittingCategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div>
                    <h4>Sitting Category Info</h4>
                    <dl class="row">
                        <dt class="col-sm-2">Category</dt>
                        <dd class="col-sm-10">

                        </dd>
                        <dt class="col-sm-2">Capacity</dt>
                        <dd class="col-sm-10">

                        </dd>
                        <dt class="col-sm-2">Start Time</dt>
                        <dd class="col-sm-10">

                        </dd>
                        <dt class="col-sm-2">End Time</dt>
                        <dd class="col-sm-10">

                        </dd>
                    </dl>
                </div>
            }

            <div class="form-group col-6">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        var allSC = @Json.Serialize(Model.SittingCategories);

        $('#select').on('change', function () {
            var scId = this.value;
            var sc = allSC.find(s => s.id == scId);
            alert(sc.text);
        });
    </script>



    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
