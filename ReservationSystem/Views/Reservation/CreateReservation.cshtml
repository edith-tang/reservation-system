@model ReservationSystem.Models.Reservation.CreateReservation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReservation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SittingId" class="control-label"></label>
                <select asp-for="SittingId" class="form-control" asp-items="ViewBag.SittingId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Dates" class="control-label"></label>
                <select asp-for="Dates" asp-items="Model.Dates" class="form-control"></select>
                @Html.DropDownListFor(m => m.Date, Model.Dates, "Select a date")
                <span asp-validation-for="Dates" class="text-danger"></span>
            </div>
            @{}
            <div class="form-group">
                <label asp-for="NumOfGuests" class="control-label"></label>
                <input asp-for="NumOfGuests" class="form-control" />
                <span asp-validation-for="NumOfGuests" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            @{ 
                Model.WayOfBooking = ReservationSystem.Data.Enums.WayOfBooking.Online;
                Model.Status = ReservationSystem.Data.Enums.ReservationStatus.New;
                }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
