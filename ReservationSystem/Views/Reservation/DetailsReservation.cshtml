@model ReservationSystem.Data.Reservation

@{
    ViewData["Title"] = "Details";
}

<h3>Reservation Details</h3>

<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Category</th>
                <th scope="col">Session Start Time</th>
                <th scope="col">Session End Time</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Model.Sitting.Date</th>
                <td>@Model.Sitting.SittingCategory.Name</td>
                <td>@Model.Sitting.SittingCategory.StartTime</td>
                <td>@Model.Sitting.SittingCategory.EndTime</td>
            </tr>
        </tbody>
    </table>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumOfGuests)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumOfGuests)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpectedStartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpectedStartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpectedEndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpectedEndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeOfBooking)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeOfBooking)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WayOfBooking)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WayOfBooking)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustEmail)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
