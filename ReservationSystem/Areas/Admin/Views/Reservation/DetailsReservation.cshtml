@model ReservationSystem.Data.Reservation

@{
    ViewData["Title"] = "Reservation Details";
}

<div class="row mx-5">

    <div class="col-12">
        <div class="row">
            <div class="col-6">
                <h4>@ViewData["Title"]</h4>
            </div>
            <div class="col-6">
                <a class="btn btn-info float-right" asp-action="IndexReservation">Back to reservation list</a>
            </div>
        </div>
        <hr />
    </div>

    <div class="col-8 mx-auto">
        <div class="row">
            <div class="col-6">
                <dl>
                    <dt>
                        Category
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Sitting.SittingCategory.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Sitting.Capacity)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Sitting.Capacity)
                    </dd>
                </dl>
            </div>
            <div class="col-6">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Sitting.SittingCategory.StartTime)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Sitting.SittingCategory.StartTime)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Sitting.SittingCategory.EndTime)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Sitting.SittingCategory.EndTime)
                    </dd>
                </dl>
            </div>
        </div>
        <hr />
    </div>

    <div class="col-8 mx-auto">
        <div class="row">
            <div class="col-6">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Sitting.Date)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Sitting.Date)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ExpectedStartTime)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ExpectedStartTime)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ExpectedEndTime)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ExpectedEndTime)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.NumOfGuests)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.NumOfGuests)
                    </dd>
                </dl>
            </div>
            <div class="col-4">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Notes)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Notes)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.TimeOfBooking)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.TimeOfBooking)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.WayOfBooking)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.WayOfBooking)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-8 mx-auto mt-3">
        <div class="row">
            <div class="col-6">
                @if ((int)Model.Status == 0)
                {
                    <a class="btn btn-primary mr-3 w-50" asp-action="Allocate" asp-controller="SittingUnit" asp-route-id="@Model.Id">Allocate</a>
                }
                else if ((int)Model.Status == 1)
                {
                    <a class="btn btn-primary mr-3 w-50" asp-action="Allocate" asp-controller="SittingUnit" asp-route-id="@Model.Id">Reallocate</a>
                }
                @*else if ((int)Model.Status > 2)
        {
            <a class="btn btn-primary" asp-action="" asp-controller="SittingUnit" asp-route-id="@Model.Id">More Info</a>
        }*@
            </div>
            <div class="col-6">
                @if ((int)Model.Status < 2)
                {
                    <a id="cancel" class="btn btn-danger w-50 float-left" asp-action="CancelReservation" asp-controller="Reservation" asp-route-id="@Model.Id">Cancel</a>
                }
            </div>
        </div>
    </div>
</div>

@section Styles{
    <link href="~/css/my02.css" rel="stylesheet" />
}

@section Scripts {
    <script>
        $("#cancel").on("click", () => {
            if (confirm("Do you want to cancel this reservation?")) { }
            else { return false; }
        });
    </script>
}
