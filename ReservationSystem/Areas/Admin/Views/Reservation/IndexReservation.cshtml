
@{
    ViewData["Title"] = "IndexReservation";
}

<div class="mt-5">
    @if ((bool)ViewData["Check"])
    {
        <div class="row justify-content-center mb-3">
            <a class="btn btn-info w-25 text-nowrap" asp-controller="Reservation" asp-action="CreateReservation">Create Reservation</a>
        </div>
    }
    <div class="row justify-content-center mb-3">
        <a class="btn btn-info w-25 text-nowrap" asp-controller="Reservation" asp-action="PastReservations">Past Reservations</a>
    </div>
    <div class="row justify-content-center mb-3">
        <a class="btn btn-info w-25 text-nowrap" asp-controller="Reservation" asp-action="FutureReservations">Future Reservations</a>
    </div>
</div>



