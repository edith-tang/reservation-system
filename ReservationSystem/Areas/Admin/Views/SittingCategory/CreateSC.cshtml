@model ReservationSystem.Areas.Admin.Models.SittingCategory.CreateSC

@{
    ViewData["Title"] = "Create a Sitting Category";
}



<div class="row mx-5">

    <div class="col-12">
        <div class="row">
            <div class="col-6">
                <h4>Add a Sitting Category</h4>
            </div>
            <div class="col-6">
                <a class="btn btn-info float-right" role="button" asp-action="IndexSC">Back to list</a>
            </div>
        </div>
        <hr />
    </div>

    <form  class="col-12 mx-auto" asp-action="CreateSC" style="max-width: 800px">

        @*<div asp-validation-summary="All" class="text-danger"></div>*@

        <div class="row">
            <div class="form-group col-6">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-6">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" id="StartTime" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" id="EndTime" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-6">
                <label asp-for="IntervalHours" class="control-label"></label>
                <input asp-for="IntervalHours" class="form-control" />
                <span asp-validation-for="IntervalHours" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="IntervalMinutes" class="control-label"></label>
                <input asp-for="IntervalMinutes" class="form-control" />
                <span asp-validation-for="IntervalMinutes" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-12">
                <label asp-for="TablesId" class="control-label"></label>
                <select asp-for="TablesId" asp-items="Model.Tables" class="form-control" multiple="multiple">
                </select>
                <span asp-validation-for="TablesId" class="text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-center">
            <input type="submit" value="Create" class="btn btn-primary w-25" />
        </div>

    </form>
</div>

@section styles{ 
    <link href="~/css/my.css" rel="stylesheet" />
}

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
