<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reservation System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/my01.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a style="white-space: nowrap; display: block" class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a style="white-space: nowrap; display: block" class="nav-link text-dark" asp-area="Admin" asp-controller="SittingCategory" asp-action="IndexSC">Sitting Category</a>
                        </li>
                        <li class="nav-item">
                            <a  style="white-space: nowrap; display: block" class="nav-link text-dark" asp-area="Admin" asp-controller="Sitting" asp-action="IndexSitting">Sitting</a>
                        </li>
                        <li class="nav-item">
                            <a  style="white-space: nowrap; display: block" class="nav-link text-dark" asp-area="Admin" asp-controller="Reservation" asp-action="IndexReservation">Reservation</a>
                        </li>
                        @*<li class="nav-item">
                            <a  style="white-space: nowrap" class="nav-link text-dark" asp-area="Admin" asp-controller="SittingUnit" asp-action="Index">Sitting Unit</a>
                        </li>*@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a  style="white-space: nowrap; display: block" class="nav-link text-dark" asp-area="Admin" asp-controller="Employee" asp-action="CreateEmployee">Create Employee</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    <footer class="border-top footer text-muted">
        <div class="container">&copy; 2021 - Reservation System</div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
