@model IEnumerable<ReservationSystem.Data.Sitting>

@{
    ViewData["Title"] = "Index -Sittings";
}

<h3>Manage Sittings</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col" style="white-space: nowrap">Date</th>
            <th scope="col" style="white-space: nowrap">Status</th>
            <th scope="col" style="white-space: nowrap">Sitting Category</th>
            <th scope="col" style="white-space: nowrap">Capacity</th>
            <th scope="col" style="white-space: nowrap">Used Capacity</th>
            <th scope="col" style="white-space: nowrap">Remaining Capacity</th>
            <th scope="col" style="white-space: nowrap"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SittingCategory.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsedCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RemainingCapacity)
            </td>
            <td>
                <a class="btn btn-info" role="button" asp-action="DetailsSitting" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@if (TempData["Message"] != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@TempData["Message"]");
            };
    </script>

}  